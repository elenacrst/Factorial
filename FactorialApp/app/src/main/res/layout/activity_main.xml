<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elena.factorialapp.MainActivity">

    <EditText
        android:textSize="20sp"
        android:hint="@string/input_hint"
        android:id="@+id/edit_text_number"
        android:inputType="number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_instructions"
        android:layout_marginRight="32dp"
        app:layout_constraintVertical_bias="0.501"
        app:layout_constraintRight_toRightOf="@+id/text_view_instructions"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:textSize="15sp"
        android:id="@+id/text_view_instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/instructions_text"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/text_view_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        tools:text="Result :\n4!=120"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/button_reset"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/button_calculate"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_number"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintVertical_bias="0.513" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_reset"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/rounded_rectangle"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/edit_text_number"
        app:layout_constraintTop_toTopOf="@+id/button_calculate"/>

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_calculate"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/rounded_rectangle_primary"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/edit_text_number"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_number" />
</android.support.constraint.ConstraintLayout>
